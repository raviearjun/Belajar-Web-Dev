<section class="py-5">
  <div class="container">
    <h3 class="fw-bold" data-aos="fade-up">
      Explore <span class="text-warning">Our Pricing</span>
    </h3>
    <p class="text-muted mb-4" data-aos="fade-up" data-aos-delay="100">
      Our pricing is designed to match your needs and project complexity,
      whether it’s a simple landing page or a full SaaS platform.
    </p>

    <!-- Row 1: 3 Cards -->
    <div class="row g-4">
      <% const firstRow = [ { title: "Basic Website", price: "Rp500.000,-",
      desc: "1–3 pages, responsive design, basic contact form" }, { title:
      "UI/UX Design", price: "Rp550.000,-", desc: "3–5 screens in Figma,
      responsive for mobile & desktop" }, { title: "Company Profile", price:
      "Rp850.000,-", desc: "5–7 pages, CMS, contact form" } ]; %> <%
      firstRow.forEach(function(card, i) { %>
      <div class="col-md-4" data-aos="fade-up" data-aos-delay="<%= i * 100 %>">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <span class="badge bg-warning text-dark mb-2"
              ><%= card.title %></span
            >
            <p class="text-muted mb-1">Starting from</p>
            <h4 class="fw-bold"><%= card.price %></h4>
            <p class="small text-muted"><%= card.desc %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Row 2: 2 Wide Cards -->
    <div class="row g-4 mt-2">
      <% const secondRow = [ { title: "E-commerce Site", price: "Rp1.500.000,-",
      desc: "Product catalog, payment gateway, mobile ready" }, { title: "Custom
      App Development", price: "Custom Quote", desc: "Android/iOS app with auth
      & features" } ]; %> <% secondRow.forEach(function(card, i) { %>
      <div
        class="col-md-6"
        data-aos="fade-up"
        data-aos-delay="<%= 100 + i * 100 %>"
      >
        <div class="card border-0 shadow h-100 rounded-pill px-4">
          <div class="card-body py-4">
            <span class="badge bg-warning text-dark mb-2"
              ><%= card.title %></span
            >
            <p class="text-muted mb-1">Starting from</p>
            <h4 class="fw-bold"><%= card.price %></h4>
            <p class="small text-muted"><%= card.desc %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Row 3: 3 Cards -->
    <div class="row g-4 mt-2">
      <% const thirdRow = [ { title: "SaaS Development", price: "Custom Quote",
      desc: "User management, API system" }, { title: "Game Development", price:
      "Custom Quote", desc: "2D/3D prototype game with core mechanics" }, {
      title: "Data Science Solutions", price: "Custom Quote", desc: "Data
      cleaning, dashboards, ML models" } ]; %> <%
      thirdRow.forEach(function(card, i) { %>
      <div
        class="col-md-4"
        data-aos="fade-up"
        data-aos-delay="<%= 200 + i * 100 %>"
      >
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <span class="badge bg-warning text-dark mb-2"
              ><%= card.title %></span
            >
            <p class="text-muted mb-1">Starting from</p>
            <h4 class="fw-bold"><%= card.price %></h4>
            <p class="small text-muted"><%= card.desc %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
